pipeline {
    agent any
    environment {
        AWS_REGION     = 'us-east-1'
        AWS_ACCOUNT_ID = '647800544853'
        ECR_REPO_NAME  = 'cicd-practice'
        EC2_HOST       = '13.221.131.107'

        ECR_REGISTRY = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
        IMAGE_NAME   = "${ECR_REPO_NAME}"
        IMAGE_TAG    = "build-${env.BUILD_NUMBER}"
        FULL_IMAGE   = "${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
        LATEST_IMAGE = "${ECR_REGISTRY}/${IMAGE_NAME}:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -la'
            }
        }
        
        stage('Prepare Tag') {
            steps {
                script {
                    env.IMAGE_TAG = "build-${env.BUILD_NUMBER}"
                    env.FULL_IMAGE = "${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
        stage ('AWS login'){
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                    credentialsId: 'aws-login-creds'
                ]]) {
                    sh '''
                        set -e
                        export AWS_DEFAULT_REGION=${AWS_REGION}
                        docker run --rm \
                          -e AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \
                          -e AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \
                          -e AWS_DEFAULT_REGION=${AWS_REGION} \
                          amazon/aws-cli:2.15.40 \
                          sts get-caller-identity
                        docker run --rm \
                          -e AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \
                          -e AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \
                          -e AWS_DEFAULT_REGION=${AWS_REGION} \
                          amazon/aws-cli:2.15.40 \
                          ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                    '''
                }
            }
        }

        stage('Build and Test Docker Image') {
            steps {
                dir('pipeline_3') {
                    sh ''' 
                    docker rm -f ${IMAGE_NAME} || true
                    docker build -t ${FULL_IMAGE} .
                    docker run -d --name ${IMAGE_NAME} -p 5000:5000 ${FULL_IMAGE}
                    sleep 5
                    docker rm -f ${IMAGE_NAME}
                    '''
                }
            }
        }
        stage('Push to ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                    credentialsId: 'aws-login-creds'
                ]]) {
                    sh '''
                    set -e
                    export AWS_DEFAULT_REGION=${AWS_REGION}
                    docker run --rm \
                      -e AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \
                      -e AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \
                      -e AWS_DEFAULT_REGION=${AWS_REGION} \
                      amazon/aws-cli:2.15.40 \
                      ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                    docker push ${FULL_IMAGE}
                    docker tag ${FULL_IMAGE} ${LATEST_IMAGE}
                    docker push ${LATEST_IMAGE}
                    '''
                }
            }    
        }
        stage('Deploy to EC2') {
            steps {
                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                        secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                        credentialsId: 'aws-login-creds'
                    ],
                    sshUserPrivateKey(
                        credentialsId: 'ec2-ssh-key',
                        keyFileVariable: 'SSH_KEY',
                        usernameVariable: 'SSH_USER'
                    )
                ]) {
                    sh '''
                    set -euo pipefail
                    echo "Starting SSH debug for deploy"
                    echo "Target: ${SSH_USER}@${EC2_HOST}"
                    echo "Key file: ${SSH_KEY}"

                    SSH_OPTS="-vv -o BatchMode=yes -o ConnectTimeout=20 -o StrictHostKeyChecking=no -o ServerAliveInterval=15 -o ServerAliveCountMax=3 -i ${SSH_KEY}"

                    echo "Step 1/2: Validating SSH login only"
                    ssh ${SSH_OPTS} ${SSH_USER}@${EC2_HOST} "echo 'SSH login successful'; whoami; hostname; date -Iseconds"

                    echo "Step 2/2: Running remote deploy commands"
                    ssh ${SSH_OPTS} ${SSH_USER}@${EC2_HOST} \
                      AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}" \
                      AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}" \
                      AWS_REGION="${AWS_REGION}" \
                      ECR_REGISTRY="${ECR_REGISTRY}" \
                      FULL_IMAGE="${FULL_IMAGE}" \
                      'bash -s' <<'REMOTE_SCRIPT'
                        set -euo pipefail
                        echo "Deploy stage started on $(hostname) at $(date -Iseconds)"
                        export AWS_DEFAULT_REGION="${AWS_REGION}"

                        echo "Authenticating docker client against ECR..."
                        docker run --rm \
                          -e AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}" \
                          -e AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}" \
                          -e AWS_DEFAULT_REGION="${AWS_DEFAULT_REGION}" \
                          amazon/aws-cli:2.15.40 \
                          ecr get-login-password --region "${AWS_REGION}" | docker login --username AWS --password-stdin "${ECR_REGISTRY}"

                        echo "Pulling image ${FULL_IMAGE}..."
                        docker pull "${FULL_IMAGE}"

                        echo "Restarting container node-app..."
                        docker stop node-app || true
                        docker rm node-app || true
                        docker run -d --name node-app -p 80:5000 "${FULL_IMAGE}"

                        echo "Deployment complete at $(date -Iseconds)"
                      REMOTE_SCRIPT
                    '''
                }
            }
        }
    }
}
