pipeline {
    agent any

    environment {
        AWS_REGION     = 'us-east-1'
        AWS_ACCOUNT_ID = '647800544853'
        ECR_REPO_NAME  = 'cicd-practice'
        EC2_HOST       = '13.221.131.107'

        ECR_REGISTRY = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Prepare Tag') {
            steps {
                script {
                    env.IMAGE_TAG = env.GIT_COMMIT.take(7)
                    env.FULL_IMAGE = "${ECR_REGISTRY}/${ECR_REPO_NAME}:${IMAGE_TAG}"
                }
                echo "Using image: ${FULL_IMAGE}"
            }
        }

        stage('Build Image') {
            steps {
                dir('pipeline_3') {
                    sh '''
                    docker build -t ${FULL_IMAGE} .
                    '''
                }
            }
        }

        stage('Test Image') {
            steps {
                sh '''
                docker rm -f test-app || true
                docker run -d --name test-app -p 5000:5000 ${FULL_IMAGE}
                sleep 5
                docker inspect -f '{{.State.Running}}' test-app | grep true
                docker rm -f test-app
                '''
            }
        }

        stage('Login & Push to ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                    credentialsId: 'aws-login-creds'
                ]]) {
                    sh '''
                    export AWS_DEFAULT_REGION=${AWS_REGION}

                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${ECR_REGISTRY}

                    docker push ${FULL_IMAGE}
                    '''
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                        secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                        credentialsId: 'aws-login-creds'
                    ],
                    sshUserPrivateKey(
                        credentialsId: 'ec2-ssh-key',
                        keyFileVariable: 'SSH_KEY',
                        usernameVariable: 'SSH_USER'
                    )
                ]) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@${EC2_HOST} "
                        export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                        export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
                        export AWS_DEFAULT_REGION=${AWS_REGION}

                        aws ecr get-login-password --region ${AWS_REGION} \
                        | docker login --username AWS --password-stdin ${ECR_REGISTRY}

                        docker pull ${FULL_IMAGE}

                        docker stop node-app || true
                        docker rm node-app || true

                        docker run -d --name node-app -p 80:5000 ${FULL_IMAGE}
                    "
                    '''
                }
            }
        }
    }
}