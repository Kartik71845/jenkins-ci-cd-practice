pipeline {
    agent any

    environment {
        AWS_REGION     = 'us-east-1'
        AWS_ACCOUNT_ID = '647800544853'
        ECR_REPO_NAME  = 'cicd-practice'
        EC2_HOST       = '3.85.208.192'

        ECR_REGISTRY = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com"
        IMAGE_NAME   = "${ECR_REPO_NAME}"
        IMAGE_TAG    = "build-${env.BUILD_NUMBER}"
        FULL_IMAGE   = "${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
        LATEST_IMAGE = "${ECR_REGISTRY}/${IMAGE_NAME}:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -la'
            }
        }

        stage('Prepare Tag') {
            steps {
                script {
                    def shortCommit = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    if (!shortCommit) {
                        error('Unable to determine Git commit for tagging.')
                    }
                    env.IMAGE_TAG = "build-${env.BUILD_NUMBER}-${shortCommit}"
                    env.FULL_IMAGE = "${env.ECR_REGISTRY}/${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                    echo "Building image ${env.FULL_IMAGE} (also tagging latest)"
                }
            }
        }

        stage('Build and Test Docker Image') {
            steps {
                dir('pipeline_3') {
                    sh '''
                    set -euxo pipefail
                    TEST_CONTAINER=${IMAGE_NAME}-test
                    docker rm -f ${IMAGE_NAME} || true
                    docker rm -f $TEST_CONTAINER || true
                    docker build -t ${FULL_IMAGE} -t ${LATEST_IMAGE} .
                    docker run -d --name $TEST_CONTAINER -p 5000:5000 ${FULL_IMAGE}
                    sleep 5
                    curl -fsS http://localhost:5000/ >/dev/null
                    docker rm -f $TEST_CONTAINER
                    '''
                }
            }
        }

        stage('Push to ECR') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                    credentialsId: 'aws-login-creds'
                ]]) {
                    sh '''
                    set -e
                    export AWS_DEFAULT_REGION=${AWS_REGION}
                    docker run --rm \
                      -e AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID} \
                      -e AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY} \
                      -e AWS_DEFAULT_REGION=${AWS_REGION} \
                      amazon/aws-cli:2.15.40 \
                      ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}
                    docker push ${FULL_IMAGE}
                    docker push ${LATEST_IMAGE}
                    '''
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                        secretKeyVariable: 'AWS_SECRET_ACCESS_KEY',
                        credentialsId: 'aws-login-creds'
                    ],
                    sshUserPrivateKey(
                        credentialsId: 'ec2-ssh-key',
                        keyFileVariable: 'SSH_KEY'
                    )
                ]) {
                    sh """
                    set -euxo pipefail
                    echo "Connecting to EC2 host ${EC2_HOST} for deployment..."
                    ssh -vvv -o StrictHostKeyChecking=no -i ${SSH_KEY} ec2-user@${EC2_HOST} <<EOF
                        set -euxo pipefail
                        echo "Deploy stage started on \$(hostname) at \$(date -Iseconds)"
                        export AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
                        export AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
                        export AWS_DEFAULT_REGION=${AWS_REGION}

                        echo "Authenticating docker client against ECR..."
                        docker run --rm \
                          -e AWS_ACCESS_KEY_ID=\\${AWS_ACCESS_KEY_ID} \
                          -e AWS_SECRET_ACCESS_KEY=\\${AWS_SECRET_ACCESS_KEY} \
                          -e AWS_DEFAULT_REGION=\\${AWS_DEFAULT_REGION} \
                          amazon/aws-cli:2.15.40 \
                          ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REGISTRY}

                        echo "Pulling latest image ${FULL_IMAGE}..."
                        docker pull ${FULL_IMAGE}

                        echo "Restarting container node-app..."
                        docker stop node-app || true
                        docker rm node-app || true
                        docker run -d --name node-app -p 80:5000 ${FULL_IMAGE}

                        echo "Deployment complete at \$(date -Iseconds)"
                    EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo "===== Deployment Finished Successfully ====="
        }
        failure {
            echo "===== Deployment Failed ====="
        }
    }
}
